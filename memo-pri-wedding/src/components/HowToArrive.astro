      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('[data-tabs-target]');
    const tabContents = document.querySelectorAll('#arrivalTabContent > div');
    const tabList = document.getElementById('arrivalTabs');

    // Function to switch tabs
    const switchTab = (targetId) => {
      tabContents.forEach(content => {
        if ('#' + content.id === targetId) {
          content.classList.remove('hidden');
        } else {
          content.classList.add('hidden');
        }
      });
      tabs.forEach(tab => {
        if (tab.getAttribute('data-tabs-target') === targetId) {
          tab.setAttribute('aria-selected', 'true');
          tab.classList.add('border-blue-dark', 'text-blue-dark');
          tab.classList.remove('border-transparent', 'hover:text-gray-600', 'hover:border-gray-300');
        } else {
          tab.setAttribute('aria-selected', 'false');
          tab.classList.remove('border-blue-dark', 'text-blue-dark');
          tab.classList.add('border-transparent', 'hover:text-gray-600', 'hover:border-gray-300');
        }
      });
    };

    // Add click listeners
    tabs.forEach(tab => {
      tab.addEventListener('click', (e) => {
        const targetId = e.target.getAttribute('data-tabs-target');
        switchTab(targetId);
      });
    });

    // Activate the first tab initially
    if (tabs.length > 0) {
       const firstTabTarget = tabs[0].getAttribute('data-tabs-target');
       switchTab(firstTabTarget);
    } else {
       // Default border styles if no tabs exist (edge case)
       tabs.forEach(tab => tab.classList.add('border-transparent'));
    }
  });
</script>