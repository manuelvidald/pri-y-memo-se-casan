---
import { Icon } from 'astro-icon/components';

const weddingTimeline = [
  {
    title: "Ceremonia",
    time: "12:00 Hs",
    icon: "/images/icon-anillos-white.png"
  },
  {
    title: "Brindis",
    time: "14:00 Hs",
    icon: "/images/icon-brindis-white.png" // Corrected filename from user prompt
  },
  {
    title: "Comida",
    time: "14:30 Hs",
    icon: "/images/icon-comida-white.png"
  },
  {
    title: "Fiesta",
    time: "16:00 Hs",
    icon: "/images/icon-fiesta-white.png"
  }
];
---

<section id="timeline" class="section py-12 md:py-16" style="background-color: #004AAD;"> {/* Removed global font, added background color style */}
  <div class="container mx-auto px-4">
    <h2 class="section-title text-white">TIMELINE</h2> {/* Changed text color */}

    {/* Mobile View: Vertical Timeline - Centered */}
    <div class="relative md:hidden mt-12 max-w-xs mx-auto">
      {/* Removed Vertical connecting line */}

      <div class="space-y-8 flex flex-col items-center"> {/* Centered column layout, reduced spacing */}
        {weddingTimeline.map((item, index) => (
          <div class="flex flex-col items-center text-center"> {/* Centered column for each item */}
            {/* Icon */}
            <div class="mb-2">
               <img 
                 src={item.icon} 
                 alt={`${item.title} Icon`} 
                 class:list={[
                   "object-contain mx-auto",
                   item.title === 'Fiesta' ? 'h-24 w-24' : 'h-20 w-20' // Conditional size for Fiesta
                 ]} 
               />
            </div>
            {/* Content */}
            <div class="mt-1">
              <p class="text-md text-white unified-text">{item.time}</p> {/* Changed text color + added unified-text */}
              <p class="text-md text-white mt-1 tracking-wider unified-text">{item.title}</p> {/* Removed uppercase class + added unified-text */}
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* Desktop View: Horizontal Timeline - Centered */}
    <div class="hidden md:block relative max-w-3xl lg:max-w-4xl mx-auto mt-16">
      {/* Removed Horizontal connecting line */}

      {/* Use flex grid for centering and spacing */}
      <div class="flex justify-center items-baseline space-x-8 lg:space-x-16"> {/* Changed items-start to items-baseline */}
        {weddingTimeline.map((item, index) => (
          <div class="timeline-point flex-shrink-0 w-32 flex flex-col items-center text-center">
            {/* Icon */}
            <div class="mb-2">
                 <img 
                   src={item.icon} 
                   alt={`${item.title} Icon`} 
                   class:list={[
                     "object-contain mx-auto",
                     item.title === 'Fiesta' ? 'h-20 w-20' : 'h-16 w-16' // Conditional size for Fiesta
                   ]} 
                 />
            </div>
            {/* Content */}
            <p class="text-md text-white mt-2 unified-text">{item.time}</p> {/* Changed text color + added unified-text */}
            <p class="text-md text-white mt-1 tracking-wider unified-text">{item.title}</p> {/* Removed uppercase class + added unified-text */}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>